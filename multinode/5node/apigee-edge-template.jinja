{% set  NETWORK_NAME = env['deployment'] + '-' + 'network' %}

resources:
- name: {{ NETWORK_NAME }}
  type: apigee-network-template.jinja
- name: {{ NETWORK_NAME }}-firewall
  type: apigee-firewall-template.jinja
  properties:
    network: {{ NETWORK_NAME }}
- name: apigee-rmp0
  type: apigee-rmp-vm-template.jinja
  properties:
    network: {{ NETWORK_NAME }}
    machineType: {{ properties["machineType"] }}
    zone: {{ properties["zone"] }}
    public-key: {{ properties["public-key"] }}
- name: apigee-rmp1
  type: apigee-rmp-vm-template.jinja
  properties:
    network: {{ NETWORK_NAME }}
    machineType: {{ properties["machineType"] }}
    zone: {{ properties["zone"] }}
    public-key: {{ properties["public-key"] }}
- name: apigee-ax0
  type: apigee-shared-vm-template.jinja
  properties:
    network: {{ NETWORK_NAME }}
    machineType: {{ properties["machineType"] }}
    zone: {{ properties["zone"] }}
    public-key: {{ properties["public-key"] }}
- name: apigee-ax1
  type: apigee-shared-vm-template.jinja
  properties:
    network: {{ NETWORK_NAME }}
    machineType: {{ properties["machineType"] }}
    zone: {{ properties["zone"] }}
    public-key: {{ properties["public-key"] }}
- name: apigee-mgmt
  type: apigee-shared-vm-template.jinja
  properties:
    network: {{ NETWORK_NAME }}
    machineType: {{ properties["machineType"] }}
    zone: {{ properties["zone"] }}
    public-key: {{ properties["public-key"] }}
- name: apigee-lb
  type: apigee-lb-template.jinja
  properties:
    region: {{ properties['region']}}
    instance1: $(ref.apigee-rmp0.selfLink)
    instance2: $(ref.apigee-rmp1.selfLink)
outputs:
- name: HOST_NAMES
  value: $(ref.apigee-mgmt.myIp):$(ref.apigee-rmp0.myIp):$(ref.apigee-rmp1.myIp):$(ref.apigee-ax0.myIp):$(ref.apigee-ax1.myIp)
- name: LB_IP_ALIAS
  value: $(ref.apigee-lb.LB_IP_ALIAS)