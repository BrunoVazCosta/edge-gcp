{% set COMPUTE_URL_BASE = 'https://www.googleapis.com/compute/v1/' %}
{% set  SUBNET_NAME = properties['network'] + '-' + 'subnet' %}
{% set MASTER = env["name"] + "-" + env["deployment"]  %}


resources:
- name: {{ MASTER }}
  type: compute.v1.instance
  properties:
    zone: {{ properties['zone'] }}
    machineType: {{ COMPUTE_URL_BASE }}projects/{{ env['project'] }}/zones/{{ properties['zone'] }}/machineTypes/{{ properties["machineType"] }}
    sizeGb: 40
    metadata:
      items:
      - key: ssh-keys
        value: {{ properties['public-key'] }}
      - key: startup-script
        value: |
          iptables -A PREROUTING -t nat -i eth0 -p tcp --dport 9001 -j DNAT --to $(hostname -i):9001
          iptables -A FORWARD -i eth0 -p tcp --dport  9001 -d 0.0.0.0 -j ACCEPT
          iptables -A PREROUTING -t nat -i eth0 -p tcp --dport 9002 -j DNAT --to $(hostname -i):9002
          iptables -A FORWARD -i eth0 -p tcp --dport  9002 -d 0.0.0.0 -j ACCEPT

    disks:
    - deviceName: boot
      type: PERSISTENT
      boot: true
      autoDelete: true
      initializeParams:
        diskName: {{ MASTER }}-disk
        diskSizeGb: 40
        sourceImage: {{ COMPUTE_URL_BASE }}projects/rhel-cloud/global/images/family/rhel-6
    networkInterfaces:
    - network: $(ref.{{ properties["network"] }}.selfLink)
      subnetwork : $(ref.{{ SUBNET_NAME }}.selfLink)
      accessConfigs:
      - name: External NAT
        type: ONE_TO_ONE_NAT 
outputs:
- name: myIp
  value: $(ref.{{ MASTER }}.networkInterfaces[0].networkIP)
- name: selfLink
  value: $(ref.{{ MASTER }}.selfLink)
