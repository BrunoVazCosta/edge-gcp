resources:
- name: apigee-ds1
  type: apigee-shared-vm-template.jinja
  properties:
    network: {{ properties["network"] }}
    subnet: {{ properties["subnet"] }}
    machineType: {{ properties["machineType"] }}
    zone: {{ properties["zone"] }}
    public-key: {{ properties["public-key"] }}
- name: apigee-ds2
  type: apigee-shared-vm-template.jinja
  properties:
    network: {{ properties["network"] }}
    subnet: {{ properties["subnet"] }}
    machineType: {{ properties["machineType"] }}
    zone: {{ properties["zone"] }}
    public-key: {{ properties["public-key"] }}
- name: apigee-qs0
  type: apigee-shared-vm-template.jinja
  properties:
    network: {{ properties["network"] }}
    subnet: {{ properties["subnet"] }}
    machineType: {{ properties["machineType"] }}
    zone: {{ properties["zone"] }}
    public-key: {{ properties["public-key"] }}
- name: apigee-qs1
  type: apigee-shared-vm-template.jinja
  properties:
    network: {{ properties["network"] }}
    subnet: {{ properties["subnet"] }}
    machineType: {{ properties["machineType"] }}
    zone: {{ properties["zone"] }}
    public-key: {{ properties["public-key"] }}
- name: apigee-ps0
  type: apigee-shared-vm-template.jinja
  properties:
    network: {{ properties["network"] }}
    subnet: {{ properties["subnet"] }}
    machineType: {{ properties["machineType"] }}
    zone: {{ properties["zone"] }}
    public-key: {{ properties["public-key"] }}
- name: apigee-ps1
  type: apigee-shared-vm-template.jinja
  properties:
    network: {{ properties["network"] }}
    subnet: {{ properties["subnet"] }}
    machineType: {{ properties["machineType"] }}
    zone: {{ properties["zone"] }}
    public-key: {{ properties["public-key"] }}
outputs:
- name: HOST_NAMES
  value: $(ref.apigee-ds1.myIp):$(ref.apigee-ds2.myIp):$(ref.apigee-qs0.myIp):$(ref.apigee-qs1.myIp):$(ref.apigee-ps0.myIp):$(ref.apigee-ps1.myIp)